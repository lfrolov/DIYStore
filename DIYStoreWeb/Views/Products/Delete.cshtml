@model ProductViewModel

@{
    ViewData["Title"] = "Удаление";
}

<h1>Удаление</h1>

<h3>Вы действительно хотите удалить продукт?</h3>
<div>
    <h4>@Html.DisplayFor(model => model.Name)</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.UnitQuantity)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UnitQuantity)
        </dd>        
        <dd class = "col-sm-12">
            <img src="@Url.Content(Model.ImagePath)" alt="@Html.DisplayFor(model => model.Name)" class="img-thumbnail" style="width: 200px; height: 200px; " />
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ProductId" />
        <input type="submit" value="Удалить" class="btn btn-danger" /> |
        <a asp-action="Index">Назад к списку</a>
    </form>
</div>
